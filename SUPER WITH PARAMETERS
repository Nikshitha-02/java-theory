//super passing args





package com.sample;

import java.util.Scanner;

class head1

{

	String name;

	public head1(String name)

	{

		this.name=name;

	}

	public void data()

	{

		System.out.println("service based company");

	}

}

class manager1 extends head1

{

	String id;

	public manager1(String name,String id)

	{

		super(name);

		this.id=id;

	}

}

class employee1 extends manager1

{

	int position;

	public employee1(String name,String id,int position)

	{

		super(name,id);

		this.position=position;

	}

}

public class Super {



	public static void main(String[] args) {

		// TODO Auto-generated method stub

		Scanner scanner=new Scanner(System.in);

		//head object

	        System.out.print("Enter Head name: ");

	        String headname = scanner.nextLine();

	        head1 h = new head1(headname);



	        // Manager object

	        

	        System.out.print("Enter Manager name: ");

	        String managername = scanner.nextLine();

	        System.out.print("Enter Manager id: ");

	        String managerid = scanner.nextLine();

	        manager1 m = new manager1(managername,managerid);

	        //employee object

		

		  System.out.print("Enter name: ");

	        String employeename = scanner.nextLine();

	        System.out.print("Enter id: ");

	        String employeeid = scanner.nextLine();

	        System.out.print("Enter position (int): ");

	        int employeeposition = scanner.nextInt();

	        scanner.nextLine();

	        employee1 e=new employee1(employeename,employeeid,employeeposition);

System.out.println("head name: "+h.name);

System.out.println("manager name: "+m.name+"   manager id: "+m.id);

System.out.println("employee name: "+e.name+"    employee id: "+e.id+"   employee position: "+e.position);



e.data();

scanner.close();

	}



}
